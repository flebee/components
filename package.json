{
  "name": "flebee-components",
  "license": "MIT",
  "type": "module",
  "version": "0.3.0-beta.0",
  "scripts": {
    "commit": "git-cz",
    "release": "release-it",
    "start:docs": "ng serve docs",
    "build:ui": "ng build ui",
    "build:docs": "ng build docs",
    "build:forms": "ng build forms",
    "lint:ui": "ng lint ui --fix",
    "lint:docs": "ng lint docs --fix",
    "lint:forms": "ng lint forms --fix",
    "postinstall": "simple-git-hooks",
    "build:packages": "bun run build:ui && bun run build:forms"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "18.2.8",
    "@angular/common": "18.2.8",
    "@angular/compiler": "18.2.8",
    "@angular/core": "18.2.8",
    "@angular/forms": "18.2.8",
    "@angular/platform-browser": "18.2.8",
    "@angular/platform-browser-dynamic": "18.2.8",
    "@angular/platform-server": "18.2.8",
    "@angular/router": "18.2.8",
    "@angular/ssr": "18.2.9",
    "@fontsource-variable/onest": "5.1.0",
    "@ng-doc/app": "18.3.0",
    "@ng-doc/builder": "18.3.0",
    "@ng-doc/core": "18.3.0",
    "@ng-doc/ui-kit": "18.3.0",
    "@ngx-formly/core": "6.3.9",
    "cva": "1.0.0-beta.1",
    "express": "4.21.1",
    "fast-glob": "3.3.2",
    "rxjs": "7.8.1",
    "shiki": "1.22.0",
    "tslib": "2.8.0",
    "zone.js": "0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "18.2.9",
    "@angular/cli": "18.2.9",
    "@angular/compiler-cli": "18.2.8",
    "@angular/language-service": "18.2.8",
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@commitlint/cz-commitlint": "19.6.1",
    "@release-it/bumper": "7.0.1",
    "@release-it/conventional-changelog": "10.0.0",
    "@tabler/icons": "3.19.0",
    "angular-eslint": "18.4.3",
    "autoprefixer": "10.4.20",
    "cz-git": "1.11.0",
    "eslint": "9.21.0",
    "eslint-plugin-perfectionist": "4.9.0",
    "lint-staged": "15.4.3",
    "ng-packagr": "18.2.1",
    "postcss": "8.4.47",
    "postcss-url": "10.1.3",
    "prettier": "3.3.3",
    "release-it": "18.1.2",
    "simple-git-hooks": "2.11.1",
    "tailwindcss": "3.4.14",
    "typescript": "5.5.4",
    "typescript-eslint": "8.25.0"
  },
  "simple-git-hooks": {
    "commit-msg": "bun run --bun commitlint --edit $1",
    "pre-commit": "bun run --bun lint-staged --relative"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": "8.0.0"
  }
}
